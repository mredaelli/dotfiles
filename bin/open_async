#!/bin/sh

file="${1}"
cmd="${2}"
keep_file="${3}"

file_ext="${file##*.}"
if [[ "$file" == "$file_ext" ]]; then
  file_ext=
else
  file_ext=".${file_ext}"
fi

tmp=${XDG_RUNTIME_DIR:-${TMPDIR:-/tmp}}
t=$(mktemp -p "$tmp/mutt" --suffix="${file_ext}")

cp "$file" "$t"

if [[ $cmd =~ "FILE" ]]; then
  cmd=${cmd/FILE/"${t}"}
else
  cmd="${cmd} ${t}"
fi

/bin/sh -c "${cmd} ; [ ! -v $keep_file ] || rm $t" &
