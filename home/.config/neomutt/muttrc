source ~/.config/neomutt/unbind
source ~/.config/neomutt/bindings

source ~/.config/neomutt/dracula.muttrc
source ~/.config/neomutt/solarized.muttrc
source ~/.config/neomutt/fast

set signature = ~/.config/neomutt/signature
set mailcap_path= ~/.config/neomutt/mailcap


set quit=ask-yes                    
set beep=no
set beep_new=yes      
set sleep_time = 0
set wait_key = no
set timeout = 5
set delete
set thorough_search
unset confirmappend
unset mark_old

set fast_reply=yes
set include=yes
set forward_decode                   # decode when forwarding
set reply_to                         # reply to Reply to: field
set forward_quote                    # include message in forwards
unset sig_dashes                     # no dashes before sig
unset mime_forward                   # forward attachments as part of body

set send_charset = "utf-8:iso-8859-1:us-ascii"
set charset = "utf-8"

set query_command= "khard email --parsable --search-in-source-file '%s'"

set mime_forward=yes
set mime_forward_rest=yes

set status_on_top

# Pager View Options ---------------------------------
set pager_index_lines = 8 # number of index lines to show
set pager_context = 3      # number of context lines to show
set pager_stop             # don't go to next message automatically
set menu_scroll            # scroll in menus
set wrap=80
set tilde                  # show tildes like in vim
unset markers              # no ugly plus signs

set quote_regexp = "^( {0,4}[>|:#%]| {0,4}[a-z0-9]+[>|]+)+"
set forward_format="Fw: %s"

set sidebar_short_path
set sidebar_delim_chars="/"
set sidebar_folder_indent
set sidebar_indent_string=" "
set sidebar_visible
set sidebar_format="%B%* %N" 
set sidebar_width = 20

alternative_order text/enriched text/plain text/html
auto_view text/html application/text application/pdf

# Index View Options ---------------------------------
set date_format = "%y-%m-%d %H:%M"
set index_format = "%S%T %D %-20.20F  %s %* | %5c%?X?☢%X& ?"
set sort = threads                         # like gmail
set sort_aux = reverse-last-date-received  # like gmail
set uncollapse_jump                        # don't collapse on an unread message
set pager_format =  "%[%a %w %b %y], %.20n | %s %* ~ (%P)"

#set sort_re                                # thread based on reply regex from subject
set strict_threads                          # thread based on headers
set reply_regexp = "^(([Rr][Ee]?(\[[0-9]+\])?: *)?(\[[^]]+\] *)?)*"

set flag_chars="✓!✗❎↩ ✶on  "
set to_chars=" +TCFLR"

set mail_check_stats

set text_flowed

ignore *
unignore subject to cc bcc
unhdr_order *
hdr_order to cc bcc subject
