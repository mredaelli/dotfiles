general {
        colors = true
        interval = 5
}

order += "disk /"
order += "disk /home"
order += "wireless _first_"
order += "ethernet _first_"
order += "path_exists VPN"
order += "battery 0"
order += "cpu_usage"
order += "load"
order += "tztime local"

#order += "ipv6"
