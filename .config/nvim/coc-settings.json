{
  "coc.preferences.formatOnSaveFiletypes": ["rust", "python", "scala"],
  "rust-analyzer.serverPath":"/nix/store/wsz6aq8ps93pkh7vv6349lq8h98lr15g-rust-1.47.0-nightly-2020-08-24-f44c6e4e2/bin/rust-analyzer",
  "rust-analyzer.updates.channel":"nightly",

  "diagnostic.displayByAle": true,
  "diagnostic.errorSign": "âœ˜",
